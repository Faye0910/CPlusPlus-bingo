typedef struct _PACKET
	{
	String ID;          // 4 bytes
	String Host;        // unfixed length
	String separation;  // 1 bytes ,"#"
	String MainFunc;    // 1 bytes
	String SubFunc;     //  bytes
	int MsgLength;      // 3 bytes
	String Msg;         // unfixed length
	String EndSymbol;   // 1 bytes ,"@"
	}PACKET,*pPACKET;

